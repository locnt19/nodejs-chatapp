extends layout

block content
	.container
		.row
			.col-6.mx-auto.mt-5
				h1.text-center.text-uppercase Register
				form(novalidate).needs-validation.mt-3
					.form-group
						label(for="username") Username
						input#username.form-control(type="text" required)
						.invalid-feedback Please provide a valid username.
					.form-group
						label(for="password") Password
						input#password.form-control(type="password" required)
						.invalid-feedback Please provide a valid password.
					.form-group
						label(for="repassword") Re-password
						input#repassword.form-control(type="password" required)
						.invalid-feedback Please provide a valid password.
					button.btn.btn-primary.btn-block(type="submit") Register
